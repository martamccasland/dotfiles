{
	"default_module": "powerline.segments.common",
	"segment_data": {
		"hostname": {
			"before": " ",
			"args": {
				"only_if_ssh": true
			}
		},
		"virtualenv": {
			"before": "ⓔ  "
		},
		"node": {
			"before": "⬡  "
		},
		"branch": {
			"before": " "
		},
		"bgjobs": {
			"after": " ⚙"
		},
		"mode": {
			"before": "$"
		}
	},
	"segments": {
		"left": [
			{
				"name": "hostname"
			},
			{
				"name": "user"
			},
			{
				"name": "virtualenv"
			},
			{
				"name": "branch",
				"module": "localsegments"
			},
			{
				"name": "cwd",
				"module": "localsegments",
        "draw_soft_divider": false,
        "draw_hard_divider": true,
				"args": {
					"dir_limit_depth": 3
				}
			},
			{
				"name": "bgjobs",
				"module": "localsegments"
			},
			{
				"name": "mode",
				"module": "localsegments"
			}
		],
		"right": [
			{
				"module": "powerline.segments.shell",
				"name": "last_pipe_status"
			},
			{
				"module": "localsegments",
				"name": "node"
			},
			{
				"name": "date"
			},
			{
				"name": "date",
				"args": {
					"format": "%H:%M:%S",
					"istime": true
				}
			}
		]
	}
}
